{
  "name": "rca",
  "version": "0.0.0",
  "author": "Torchbox Ltd",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": ""
  },
  "browserslist": [
    "> 0.5% and last 2 versions",
    "ie 11",
    "not ie_mob 11",
    "Firefox ESR"
  ],
  "sasslintConfig": ".sass-lint.yml",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/static_compiled/",
      "/venv/"
    ],
    "collectCoverageFrom": [
      "**/rca/static_src/javascript/**/*.js"
    ]
  },
  "config": {
    "src_js": "./rca/static_src/javascript",
    "src_css": "./rca/static_src/sass",
    "src_img": "./rca/static_src/images",
    "src_font": "./rca/static_src/fonts",
    "dest_js": "./rca/static_compiled/js",
    "dest_css": "./rca/static_compiled/css",
    "dest_img": "./rca/static_compiled/images",
    "dest_font": "./rca/static_compiled/fonts",
    "dist": "./rca/static_compiled"
  },
  "scripts": {
    "//[ Utility ]//": "",
    "serve": "browser-sync start --config browsersync.config.js",
    "reload": "browser-sync reload",
    "create_dirs:dest_js": "mkdir -p $npm_package_config_dest_js",
    "create_dirs:dest_css": "mkdir -p $npm_package_config_dest_css",
    "create_dirs:dest_img": "mkdir -p $npm_package_config_dest_img",
    "create_dirs:dest_font": "mkdir -p $npm_package_config_dest_font",
    "create_dirs": "npm-run-all -p create_dirs:*",
    "clean:dist": "rm -rf $npm_package_config_dist/{js/**,css/**,images/**}",
    "clean": "npm-run-all -p clean:*",
    "//[ Webpack build ]//": "",
    "compile:prod": "webpack --mode production",
    "compile:dev": "webpack --mode development --progress",
    "compile:watch": "npm run compile:dev -- --watch",
    "//[ Linting & formatting ]//": "",
    "lint:css": "sass-lint $npm_package_config_src_css'/**/**' -v -q",
    "lint:js": "eslint $npm_package_config_src_js",
    "lint:format": "prettier --check '**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
    "lint": "npm-run-all -p lint:format lint:js lint:css",
    "format": "prettier --write '**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
    "//[ Tests ]//": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "//[ Watches ]//": "",
    "watch:font": "onchange $npm_package_config_src_font'/**/**' -- npm-run-all sync:font reload",
    "watch:font:debug": "onchange $npm_package_config_src_font'/**/**' -- npm-run-all sync:font",
    "watch:img": "onchange $npm_package_config_src_img'/**/**' -- npm-run-all sync:img reload",
    "watch:img:debug": "onchange $npm_package_config_src_img'/**/**' -- npm-run-all sync:img",
    "watch:js": "onchange $npm_package_config_dest_js'/**/**' -- npm-run-all -p reload lint:js",
    "watch:css": "onchange $npm_package_config_dest_css -- npm-run-all -p reload lint:css",
    "watch": "npm-run-all -p watch:*",
    "//[ Syncs ]//": "",
    "sync:font": "rsync -rtvu --delete $npm_package_config_src_font/ $npm_package_config_dest_font/",
    "sync:img": "rsync -rtvu --delete $npm_package_config_src_img/ $npm_package_config_dest_img/",
    "sync": "npm-run-all -p sync:*",
    "//[ Tasks ]//": "",
    "build": "npm-run-all clean create_dirs sync compile:dev",
    "build:prod": "npm-run-all clean create_dirs sync compile:prod",
    "start": "npm-run-all clean create_dirs sync compile:dev -p compile:watch watch serve --silent"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.23.6",
    "css-loader": "^3.2.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-torchbox": "^0.3.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "postcss-custom-properties": "^9.0.2",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "sass": "^1.22.9",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@glidejs/glide": "^3.2.3",
    "headroom.js": "^0.9.4",
    "hoverintent": "^2.2.0",
    "intersection-observer": "^0.7.0",
    "js-cookie": "^2.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rellax": "^1.10.0",
    "scrollama": "^2.0.1",
    "vanilla-lazyload": "^12.0.0"
  }
}
